<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopwala</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <style>body{font-family:'Inter',sans-serif}</style>
    <style>
        .buyer-sidebar { min-height: calc(100vh - 56px); background: var(--glass-bg); backdrop-filter: blur(16px); border-right: 1px solid var(--glass-border); }
        .buyer-sidebar .nav-link { color: var(--shopwala-dark); border-radius: 12px; }
        .buyer-sidebar .nav-link:hover { background: rgba(232,93,4,0.1); color: var(--shopwala-primary); }
        .buyer-sidebar .nav-link.active { background: linear-gradient(135deg, var(--shopwala-primary), var(--shopwala-secondary)); color: #fff; }
    </style>
</head>
<body>
    <partial name="/Views/Shared/_Navbar.cshtml" />
    <div class="d-flex">
        <div class="buyer-sidebar" style="width:240px; margin-top:0">
            <nav class="nav flex-column p-3">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Dashboard"?"active":"")" asp-area="Buyer" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-grid me-2"></i>Dashboard</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Orders"?"active":"")" asp-area="Buyer" asp-controller="Orders" asp-action="Index"><i class="bi bi-bag me-2"></i>My Orders</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Profile"?"active":"")" asp-area="Buyer" asp-controller="Profile" asp-action="Index"><i class="bi bi-person me-2"></i>Profile</a>
                <hr />
                <a class="nav-link" href="/"><i class="bi bi-shop me-2"></i>Continue Shopping</a>
            </nav>
        </div>
        <main class="flex-grow-1 p-4">
            @RenderBody()
        </main>
    </div>
    <partial name="/Views/Shared/_Footer.cshtml" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
