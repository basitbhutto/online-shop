@model Presentation.Areas.Buyer.ViewModels.BuyerDashboardViewModel
@{
    ViewData["Title"] = "My Account";
}
<h1 class="mb-4"><i class="bi bi-person-circle me-2"></i>Welcome, @Model.FullName</h1>
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="card glass-card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-muted mb-2">Total Orders</h6>
                <h3 class="mb-0">@Model.TotalOrders</h3>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card glass-card border-0 shadow-sm h-100">
            <div class="card-body">
                <h6 class="text-muted mb-2">Email</h6>
                <p class="mb-0">@Model.Email</p>
            </div>
        </div>
    </div>
</div>
<div class="card glass-card border-0 shadow-sm">
    <div class="card-header bg-transparent border-0 pt-4 px-4"><h5 class="mb-0">Recent Orders</h5></div>
    <div class="card-body">
        @if (Model.RecentOrders.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead><tr><th>Order #</th><th>Status</th><th>Total</th><th>Date</th><th></th></tr></thead>
                    <tbody>
                        @foreach (var o in Model.RecentOrders)
                        {
                            <tr>
                                <td>#@o.Id</td>
                                <td><span class="badge bg-secondary">@o.StatusText</span></td>
                                <td>Rs @o.TotalAmount.ToString("N0")</td>
                                <td>@o.CreatedDate.ToString("yyyy-MM-dd")</td>
                                <td><a asp-area="Buyer" asp-controller="Orders" asp-action="Details" asp-route-id="@o.Id" class="btn btn-sm btn-outline-primary">View</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted mb-0">No orders yet. <a href="/">Start shopping</a>!</p>
        }
    </div>
</div>
