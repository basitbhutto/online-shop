@model Presentation.Areas.Admin.ViewModels.ProductEditViewModel
@{
    ViewData["Title"] = "Edit Product";
}
<div class="mb-4"><a asp-action="Index" class="text-decoration-none"><i class="bi bi-arrow-left me-1"></i>Back to Products</a></div>
<div class="card glass-card border-0 shadow-sm">
    <div class="card-body p-4">
        <h4 class="mb-4"><i class="bi bi-pencil-square me-2"></i>Edit Product</h4>
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="productForm">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label fw-semibold">Cover Image</label>
                    @if (Model.ImageUrls?.Any() == true)
                    {
                        <div class="d-flex flex-wrap gap-2 mb-2">
                            @foreach (var url in Model.ImageUrls.Take(5))
                            {
                                <img src="@url" alt="" class="img-thumbnail" style="height:80px;width:80px;object-fit:cover" onerror="this.style.display='none'" />
                            }
                        </div>
                    }
                    <input type="file" name="CoverImage" accept="image/*" class="form-control" />
                    <small class="text-muted">Add new cover (prepends to gallery)</small>
                </div>
                <div class="col-12">
                    <label class="form-label fw-semibold">Add Gallery Images</label>
                    <input type="file" name="GalleryImages" accept="image/*" multiple class="form-control" />
                    <small class="text-muted">Additional images (existing @(Model.ImageUrls?.Count ?? 0) kept)</small>
                </div>
                @for (var i = 0; i < (Model.ImageUrls?.Count ?? 0); i++)
                {
                    <input type="hidden" name="ImageUrls" value="@Model.ImageUrls![i]" />
                }
                <div class="col-12"><hr class="my-3" /></div>
                <div class="col-12"><label class="form-label">Name</label><input asp-for="Name" class="form-control" required /></div>
                <div class="col-md-6"><label class="form-label">SKU</label><input asp-for="SKU" class="form-control" required /></div>
                <div class="col-md-6"><label class="form-label">Category</label><select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" required></select></div>
                <div class="col-md-4"><label class="form-label">Purchase Price (Rs)</label><input asp-for="PurchasePrice" type="number" step="0.01" class="form-control" /></div>
                <div class="col-md-4"><label class="form-label">Sale Price (Rs)</label><input asp-for="SalePrice" type="number" step="0.01" class="form-control" required /></div>
                <div class="col-md-4"><label class="form-label">Discount Price (Rs)</label><input asp-for="DiscountPrice" type="number" step="0.01" class="form-control" /></div>
                <div class="col-md-6"><label class="form-label">Stock</label><input asp-for="Stock" type="number" class="form-control" /></div>
                <div class="col-md-6"><label class="form-label">Status</label><select asp-for="Status" class="form-select"><option value="Active">Active</option><option value="Inactive">Inactive</option></select></div>
                <div class="col-12"><label class="form-label">Description</label><textarea asp-for="Description" class="form-control" rows="3"></textarea></div>
                <div class="col-12"><hr class="my-3" /></div>
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="form-label fw-semibold mb-0">Specifications</label>
                        <button type="button" class="btn btn-sm btn-outline-primary" id="addSpec"><i class="bi bi-plus-lg me-1"></i>Add</button>
                    </div>
                    <div id="specContainer" class="border rounded p-3 bg-light">
                        @if (Model.Specifications?.Any() == true)
                        {
                            @for (var i = 0; i < Model.Specifications.Count; i++)
                            {
                                <div class="row g-2 spec-row mb-2">
                                    <div class="col-5"><input type="text" name="Specifications[@i].Key" class="form-control form-control-sm" value="@Model.Specifications[i].Key" placeholder="Key" /></div>
                                    <div class="col-5"><input type="text" name="Specifications[@i].Value" class="form-control form-control-sm" value="@Model.Specifications[i].Value" placeholder="Value" /></div>
                                    <div class="col-2"><button type="button" class="btn btn-sm btn-outline-danger remove-spec"><i class="bi bi-trash"></i></button></div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="row g-2 spec-row mb-2">
                                <div class="col-5"><input type="text" name="Specifications[0].Key" class="form-control form-control-sm" placeholder="Key (e.g. Color)" /></div>
                                <div class="col-5"><input type="text" name="Specifications[0].Value" class="form-control form-control-sm" placeholder="Value (e.g. Red)" /></div>
                                <div class="col-2"><button type="button" class="btn btn-sm btn-outline-danger remove-spec"><i class="bi bi-trash"></i></button></div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="mt-4"><button type="submit" class="btn btn-primary" style="background:#e85d04;border:none">Save</button> <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a></div>
        </form>
    </div>
</div>

@section Scripts {
<script>
(function() {
    const container = document.getElementById('specContainer');
    let idx = container.querySelectorAll('.spec-row').length;
    document.getElementById('addSpec').addEventListener('click', function() {
        const tpl = container.querySelector('.spec-row').cloneNode(true);
        tpl.classList.remove('mb-2');
        tpl.querySelector('[name*="Key"]').name = 'Specifications[' + idx + '].Key';
        tpl.querySelector('[name*="Key"]').value = '';
        tpl.querySelector('[name*="Value"]').name = 'Specifications[' + idx + '].Value';
        tpl.querySelector('[name*="Value"]').value = '';
        container.appendChild(tpl);
        idx++;
    });
    container.addEventListener('click', function(e) {
        if (e.target.closest('.remove-spec')) { e.target.closest('.spec-row')?.remove(); idx--; }
    });
})();
</script>
}
