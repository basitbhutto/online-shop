@model Presentation.Areas.Admin.ViewModels.ProductEditViewModel
@{
    ViewData["Title"] = "Create Product";
}
<div class="mb-4"><a asp-action="Index" class="text-decoration-none"><i class="bi bi-arrow-left me-1"></i>Back to Products</a></div>
<div class="card glass-card border-0 shadow-sm">
    <div class="card-body p-4">
        <h4 class="mb-4"><i class="bi bi-plus-circle me-2"></i>Create Product</h4>
        <form asp-action="Create" method="post" enctype="multipart/form-data" id="productForm">
            @Html.AntiForgeryToken()
            <div class="row g-3">
                <div class="col-12">
                    <label class="form-label fw-semibold">Cover Image</label>
                    <input type="file" name="CoverImage" accept="image/*" class="form-control" />
                    <small class="text-muted">Main product image (JPG, PNG, GIF, WebP)</small>
                </div>
                <div class="col-12">
                    <label class="form-label fw-semibold">Gallery Images</label>
                    <input type="file" name="GalleryImages" accept="image/*" multiple class="form-control" />
                    <small class="text-muted">Additional images for product gallery</small>
                </div>
                <div class="col-12"><hr class="my-3" /></div>
                <div class="col-12"><label class="form-label">Name</label><input asp-for="Name" class="form-control" required /></div>
                <div class="col-md-6"><label class="form-label">SKU</label><input asp-for="SKU" class="form-control" required /></div>
                <div class="col-md-6"><label class="form-label">Category</label><select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))" required><option value="">-- Select --</option></select></div>
                <div class="col-md-4"><label class="form-label">Purchase Price (Rs)</label><input asp-for="PurchasePrice" type="number" step="0.01" class="form-control" /></div>
                <div class="col-md-4"><label class="form-label">Sale Price (Rs)</label><input asp-for="SalePrice" type="number" step="0.01" class="form-control" required /></div>
                <div class="col-md-4"><label class="form-label">Discount Price (Rs)</label><input asp-for="DiscountPrice" type="number" step="0.01" class="form-control" placeholder="Optional" /></div>
                <div class="col-md-6"><label class="form-label">Stock</label><input asp-for="Stock" type="number" class="form-control" value="0" /></div>
                <div class="col-12"><label class="form-label">Description</label><textarea asp-for="Description" class="form-control" rows="3"></textarea></div>
                <div class="col-12"><hr class="my-3" /></div>
                <div class="col-12">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <label class="form-label fw-semibold mb-0">Specifications (e.g. Color, Size)</label>
                        <button type="button" class="btn btn-sm btn-outline-primary" id="addSpec"><i class="bi bi-plus-lg me-1"></i>Add</button>
                    </div>
                    <div id="specContainer" class="border rounded p-3 bg-light">
                        <div class="row g-2 spec-row mb-2">
                            <div class="col-5"><input type="text" name="Specifications[0].Key" class="form-control form-control-sm" placeholder="Key (e.g. Color)" /></div>
                            <div class="col-5"><input type="text" name="Specifications[0].Value" class="form-control form-control-sm" placeholder="Value (e.g. Red)" /></div>
                            <div class="col-2"><button type="button" class="btn btn-sm btn-outline-danger remove-spec"><i class="bi bi-trash"></i></button></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-4"><button type="submit" class="btn btn-primary" style="background:#e85d04;border:none">Create Product</button> <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a></div>
        </form>
    </div>
</div>

@section Scripts {
<script>
(function() {
    let idx = 1;
    document.getElementById('addSpec').addEventListener('click', function() {
        const tpl = document.querySelector('.spec-row').cloneNode(true);
        tpl.classList.remove('mb-2');
        tpl.querySelector('[name*="Key"]').name = 'Specifications[' + idx + '].Key';
        tpl.querySelector('[name*="Key"]').value = '';
        tpl.querySelector('[name*="Value"]').name = 'Specifications[' + idx + '].Value';
        tpl.querySelector('[name*="Value"]').value = '';
        document.getElementById('specContainer').appendChild(tpl);
        idx++;
    });
    document.getElementById('specContainer').addEventListener('click', function(e) {
        if (e.target.closest('.remove-spec')) e.target.closest('.spec-row')?.remove();
    });
})();
</script>
}
