<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopwala Admin</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
    <style>
        body { font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif; }
        .admin-sidebar { min-height: 100vh; background: #212529; flex-shrink: 0; position: sticky; top: 0; }
        .admin-sidebar .nav-link { color: rgba(255,255,255,.8); padding: 0.6rem 1rem; border-radius: 8px; margin: 2px 0; }
        .admin-sidebar .nav-link:hover { color: #fff; background: rgba(255,255,255,0.1); }
        .admin-sidebar .nav-link.active { background: #e85d04; color: #fff !important; }
        .admin-sidebar .logout-btn { color: rgba(255,255,255,.8); padding: 0.6rem 1rem; border-radius: 8px; margin: 2px 0; width: 100%; text-align: left; }
        .admin-sidebar .logout-btn:hover { color: #fff; background: rgba(255,255,255,0.1); }
    </style>
</head>
<body>
    <div class="d-flex min-vh-100">
        <div class="admin-sidebar" style="width:250px">
            <div class="p-3 border-bottom border-secondary">
                <a href="/" class="text-white text-decoration-none d-flex align-items-center">
                    <img src="~/images/logo.png" alt="Shopwala" style="height:32px" onerror="this.style.display='none'"/>
                    <span class="ms-2 fw-bold">Shopwala Admin</span>
                </a>
            </div>
            <nav class="nav flex-column p-2">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Dashboard"?"active":"")" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-grid me-2"></i>Dashboard</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Orders"?"active":"")" asp-area="Admin" asp-controller="Orders" asp-action="Index"><i class="bi bi-cart me-2"></i>Orders</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Products"?"active":"")" asp-area="Admin" asp-controller="Products" asp-action="Index"><i class="bi bi-box me-2"></i>Products</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Categories"?"active":"")" asp-area="Admin" asp-controller="Categories" asp-action="Index"><i class="bi bi-folder me-2"></i>Categories</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Users"?"active":"")" asp-area="Admin" asp-controller="Users" asp-action="Index"><i class="bi bi-people me-2"></i>Users</a>
                <a class="nav-link" href="/"><i class="bi bi-shop me-2"></i>View Store</a>
                <form asp-controller="Account" asp-action="Logout" asp-area="" method="post" class="w-100 px-2">
                    <button type="submit" class="logout-btn border-0 bg-transparent w-100 text-start d-flex align-items-center">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </nav>
        </div>
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
