@model List<Presentation.Areas.Admin.ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">@TempData["Success"]<button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-folder me-2"></i>Categories</h2>
    <a asp-action="Create" class="btn btn-primary" style="background:#e85d04;border:none"><i class="bi bi-plus-lg me-1"></i>Add Category</a>
</div>
<div class="card glass-card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px">Image</th>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Parent</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th style="width:150px">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>
                                @if (!string.IsNullOrEmpty(c.ImageUrl))
                                {
                                    <img src="@c.ImageUrl" alt="@c.Name" class="img-thumbnail" style="height:50px;width:50px;object-fit:cover" onerror="this.style.display='none'" />
                                }
                                else
                                {
                                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="height:50px;width:50px"><i class="bi bi-image text-muted"></i></div>
                                }
                            </td>
                            <td><strong>@c.Name</strong></td>
                            <td><code>@c.Slug</code></td>
                            <td>@(c.ParentName ?? "-")</td>
                            <td><span class="badge bg-@(c.Status == "Active" ? "success" : "secondary")">@c.Status</span></td>
                            <td>@c.CreatedDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline" onsubmit="return confirm('Delete this category?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (!Model.Any())
        {
            <div class="text-center text-muted py-5">No categories yet. <a asp-action="Create">Create one</a>.</div>
        }
    </div>
</div>
