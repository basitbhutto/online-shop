@model Presentation.Areas.Admin.ViewModels.CategoryEditViewModel
@{
    ViewData["Title"] = "Edit Category";
}
<div class="mb-4">
    <a asp-action="Index" class="text-decoration-none"><i class="bi bi-arrow-left me-1"></i>Back to Categories</a>
</div>
<div class="card glass-card border-0 shadow-sm" style="max-width:520px">
    <div class="card-body p-4">
        <h4 class="mb-4"><i class="bi bi-pencil-square me-2"></i>Edit Category</h4>
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageUrl" />
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="form-label">Category Image</label>
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mb-2">
                        <img src="@Model.ImageUrl" alt="Current" class="img-thumbnail" style="max-height:100px;max-width:100px;object-fit:cover" />
                    </div>
                }
                <input type="file" name="Image" accept="image/*" class="form-control" />
                <small class="text-muted">Leave empty to keep current image.</small>
            </div>
            <div class="mb-3">
                <label asp-for="ParentId" class="form-label">Parent Category (optional)</label>
                <select asp-for="ParentId" class="form-select">
                    <option value="">-- None (root category) --</option>
                    @foreach (var p in Model.ParentOptions)
                    {
                        <option value="@p.Id">@p.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary" style="background:#e85d04;border:none">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
