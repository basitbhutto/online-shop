@model Presentation.Areas.Admin.ViewModels.EditRolesViewModel
@{
    ViewData["Title"] = "Edit Roles";
}
<div class="mb-4">
    <a asp-action="Index" class="text-decoration-none"><i class="bi bi-arrow-left me-1"></i>Back to Users</a>
</div>
<div class="card glass-card border-0 shadow-sm" style="max-width:500px">
    <div class="card-body p-4">
        <h4 class="mb-2">Edit Roles</h4>
        <p class="text-muted mb-4">@Model.FullName â€” @Model.Email</p>
        <form asp-action="EditRoles" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="UserId" />
            <div class="mb-3">
                @foreach (var role in Model.AllRoles)
                {
                    <div class="form-check">
                        <input type="checkbox" name="SelectedRoles" value="@role" id="role_@(role.Replace(" ",""))"
                               @(Model.CurrentRoles?.Contains(role) == true ? "checked" : "") class="form-check-input" />
                        <label for="role_@(role.Replace(" ",""))" class="form-check-label">@role</label>
                    </div>
                }
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>
