@model Presentation.ViewModels.Shop.ShopIndexViewModel
@{
    ViewData["Title"] = Model.CategoryName ?? "Shop";
    var title = Model.CategoryName ?? "All Products";
    var subtitle = Model.TotalCount > 0 ? $"Connect with verified {Model.TotalCount} products" : "Discover our collection";
}

<div class="container-fluid py-4">
    <div class="row">
        <aside class="col-12 col-lg-3 mb-4 mb-lg-0 order-2 order-lg-1">
            <div class="filter-sidebar sticky-top" style="top: 90px;">
                <h5 class="fw-bold"><i class="bi bi-funnel me-2"></i>Filters</h5>
                <form asp-action="Index" method="get" id="filterForm">
                    <input type="hidden" name="search" value="@Model.SearchTerm" />
                    <input type="hidden" name="page" value="1" />
                    @if (Model.UserLat.HasValue) { <input type="hidden" name="lat" value="@Model.UserLat" /> }
                    @if (Model.UserLng.HasValue) { <input type="hidden" name="lng" value="@Model.UserLng" /> }
                    <div class="filter-section">
                        <h6 class="mb-2"><i class="bi bi-grid-3x3-gap"></i> Category</h6>
                        @foreach (var c in Model.Categories)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="categoryId" value="@c.Id" id="cat_@c.Id" @(Model.SelectedCategoryId == c.Id ? "checked" : "") onchange="document.getElementById('filterForm').submit()" />
                                <label class="form-check-label" for="cat_@c.Id">@c.Name</label>
                            </div>
                        }
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="categoryId" value="" id="cat_all" @(!Model.SelectedCategoryId.HasValue ? "checked" : "") onchange="document.getElementById('filterForm').submit()" />
                            <label class="form-check-label" for="cat_all">All Categories</label>
                        </div>
                    </div>
                    <div class="filter-section">
                        <h6 class="mb-2"><i class="bi bi-currency-exchange"></i> Price Range</h6>
                        <div class="row g-2 mb-2">
                            <div class="col-6">
                                <input type="number" name="minPrice" value="@Model.MinPrice" class="form-control form-control-sm" placeholder="PKR" min="0" step="100" />
                            </div>
                            <div class="col-6">
                                <input type="number" name="maxPrice" value="@Model.MaxPrice" class="form-control form-control-sm" placeholder="PKR" min="0" step="100" />
                            </div>
                        </div>
                        <input type="range" class="form-range price-slider" min="0" max="100000" step="1000" value="@((Model.MaxPrice ?? 5500) > 0 ? Model.MaxPrice ?? 5500 : 5500)" id="shopPriceSlider" title="Max price" />
                    </div>
                    <div class="filter-section">
                        <h6 class="mb-2"><i class="bi bi-geo-alt"></i> Location</h6>
                        <p class="small text-muted mb-2">Only locations with products are shown.</p>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="locationId" value="" id="shop_loc_all" @(!Model.SelectedLocationId.HasValue ? "checked" : "") onchange="document.getElementById('filterForm').submit()" />
                            <label class="form-check-label" for="shop_loc_all">All Locations</label>
                        </div>
                        @foreach (var loc in Model.LocationOptions)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="locationId" value="@loc.Id" id="shop_loc_@loc.Id" @(Model.SelectedLocationId == loc.Id ? "checked" : "") onchange="document.getElementById('filterForm').submit()" />
                                <label class="form-check-label" for="shop_loc_@loc.Id">@loc.DisplayName</label>
                            </div>
                        }
                    </div>
                    <button type="submit" class="btn btn-shopwala w-100 mb-2">Apply Filters</button>
                    <a asp-action="Index" class="btn btn-link btn-sm text-muted w-100">Clear All</a>
                </form>
            </div>
        </aside>
        <div class="col-12 col-lg-9 order-1 order-lg-2">
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">Explore @title</h2>
                    <p class="text-muted small mb-0">@subtitle</p>
                </div>
            </div>

            <div class="row g-4">
                @foreach (var p in Model.Products)
                {
                    <div class="col-12 col-sm-6 col-md-4 col-xl-3">
                        <div class="card product-card h-100 border-0">
                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@p.Id" class="position-relative d-block text-decoration-none product-card-link" data-product-detail-id="@p.Id">
                                <span class="badge badge-verified position-absolute top-0 start-0 m-2"><i class="bi bi-patch-check me-1"></i>Verified Supplier</span>
                                <img src="@(p.MainImageUrl ?? "/images/placeholder.svg")" class="card-img-top product-card-img" alt="@p.Name" onerror="this.src='/images/placeholder.svg'"/>
                                <button type="button" class="btn btn-sm wishlist-btn @(User.Identity?.IsAuthenticated == true && p.IsInWishlist ? "btn-danger" : "btn-outline-danger")" data-product-id="@p.Id" data-in-wishlist="@((User.Identity?.IsAuthenticated == true && p.IsInWishlist).ToString().ToLower())" title="Wishlist">
                                    <i class="bi @(User.Identity?.IsAuthenticated == true && p.IsInWishlist ? "bi-heart-fill" : "bi-heart")"></i>
                                </button>
                            </a>
                            <div class="card-body product-card-body">
                                <h6 class="card-title">@p.Name</h6>
                                <p class="small text-muted mb-2"><i class="bi bi-geo-alt me-1"></i>@(p.LocationName ?? "â€”")</p>
                                <p class="mb-2">
                                    @if (p.SalePrice > p.DisplayPrice)
                                    {
                                        <span class="product-price-old me-1">Rs @p.SalePrice.ToString("N0")</span>
                                        <span class="product-price">Rs @p.DisplayPrice.ToString("N0")</span>
                                    }
                                    else
                                    {
                                        <span class="product-price">Rs @p.DisplayPrice.ToString("N0")</span>
                                    }
                                    <span class="small text-muted">/ unit</span>
                                </p>
                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a asp-controller="Shop" asp-action="BuyNow" asp-route-id="@p.Id" class="btn btn-shopwala btn-sm w-100">Buy Now</a>
                                }
                                else
                                {
                                    <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Url.Action("Details", "Shop", new { id = p.Id })" class="btn btn-shopwala btn-sm w-100">Buy Now</a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>

            @if (!Model.Products.Any())
            {
                <div class="text-center py-5">
                    <p class="text-muted">No products found. Try adjusting your filters.</p>
                    <a asp-action="Index" class="btn btn-outline-primary">Clear Filters</a>
                </div>
            }

            @if (Model.TotalPages > 1)
            {
                <nav class="mt-4 d-flex justify-content-center">
                    <ul class="pagination">
                        @for (var i = 1; i <= Math.Min(Model.TotalPages, 10); i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-search="@Model.SearchTerm" asp-route-categoryId="@Model.SelectedCategoryId" asp-route-locationId="@Model.SelectedLocationId" asp-route-lat="@Model.UserLat" asp-route-lng="@Model.UserLng" asp-route-minPrice="@Model.MinPrice" asp-route-maxPrice="@Model.MaxPrice">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>

<div style="display:none"><form>@Html.AntiForgeryToken()</form></div>

@section Scripts {
<script>
$(function() {
    if (!window.location.search.includes('lat=') && navigator.geolocation && !sessionStorage.getItem('shopGeoAsked')) {
        sessionStorage.setItem('shopGeoAsked', '1');
        navigator.geolocation.getCurrentPosition(
            function(pos) {
                var u = new URL(window.location.href);
                u.searchParams.set('lat', pos.coords.latitude);
                u.searchParams.set('lng', pos.coords.longitude);
                window.location.href = u.toString();
            },
            function() {}
        );
    }
    var slider = document.getElementById('shopPriceSlider');
    var maxInput = document.querySelector('form#filterForm input[name="maxPrice"]');
    if (slider && maxInput) {
        slider.addEventListener('input', function() { maxInput.value = this.value || ''; });
        maxInput.addEventListener('input', function() { var v = parseInt(this.value, 10); if (!isNaN(v)) slider.value = Math.min(100000, Math.max(0, v)); });
    }
    var g = typeof getGuestWishlist === 'function' ? getGuestWishlist() : [];
    $('.wishlist-btn').each(function() {
        var pid = parseInt(this.getAttribute('data-product-id'), 10);
        if (!isNaN(pid) && g.indexOf(pid) >= 0) {
            this.setAttribute('data-in-wishlist', 'true');
            this.classList.remove('btn-outline-danger'); this.classList.add('btn-danger');
            var icon = this.querySelector('i'); if (icon) { icon.classList.remove('bi-heart'); icon.classList.add('bi-heart-fill'); }
        }
    });
    if (typeof updateWishlistCount === 'function') updateWishlistCount();
});
</script>
}
