@model Presentation.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
    Layout = "_Layout";
    var returnUrl = ViewData["ReturnUrl"] as string ?? Context.Request.Query["returnUrl"].ToString() ?? "";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="auth-modal col-11 col-md-5 col-lg-4">
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-cart3 fs-3 me-2" style="color: var(--shopwala-primary);"></i>
                <span class="shopwala-brand fs-3">Shopwala</span>
            </a>
            <h2 class="fw-bold mt-3 mb-1">Create Your Account</h2>
            <p class="text-muted small">Join Shopwala for exclusive deals!</p>
        </div>
        <form asp-controller="Account" asp-action="Register" method="post" id="registerForm">
            @Html.AntiForgeryToken()
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>
            <div class="mb-3">
                <input asp-for="FullName" class="form-control form-control-lg rounded-3" placeholder="Full Name | e.g. Ali Hassan" />
                <span asp-validation-for="FullName" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Email" class="form-control form-control-lg rounded-3" placeholder="Email Address | user@example.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Password" class="form-control form-control-lg rounded-3" placeholder="Password ••••" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-3" placeholder="Confirm Password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="agreeTerms" name="agreeTerms" required />
                <label class="form-check-label small" for="agreeTerms">I agree to the Terms &amp; Privacy Policy</label>
            </div>
            <button type="submit" class="btn btn-shopwala btn-lg w-100 py-3 rounded-3 mb-3">Create Account</button>
        </form>
        <p class="text-center mb-0 small">Already have an account? <a asp-action="Login" class="text-primary fw-semibold">Log In</a></p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('registerForm')?.addEventListener('submit', function() {
            var btn = this.querySelector('button[type="submit"]');
            if (btn) { btn.disabled = true; btn.textContent = 'Creating...'; }
        });
    </script>
}
