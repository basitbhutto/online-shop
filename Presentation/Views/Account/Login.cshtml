@model Presentation.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center py-5">
    <div class="auth-modal modal-glass col-11 col-md-5 col-lg-4 position-relative">
        <div class="text-center mb-4">
            <a asp-controller="Home" asp-action="Index" class="text-decoration-none d-inline-flex align-items-center">
                <i class="bi bi-cart3 fs-3 me-2" style="color: var(--shopwala-primary);"></i>
                <span class="shopwala-brand fs-3">Shopwala</span>
            </a>
            <h2 class="fw-bold mt-3 mb-1">Welcome Back</h2>
            <p class="text-muted small">Sign in to your Shopwala account</p>
        </div>
        <form asp-action="Login" method="post">
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control form-control-lg" placeholder="user@example.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control form-control-lg" placeholder="••••••••" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>
            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-shopwala btn-lg w-100 py-2">Login</button>
        </form>
        <p class="mt-4 text-center mb-0 small">Don't have an account? <a asp-action="Register" class="fw-semibold text-primary">Register</a></p>
    </div>
</div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }
