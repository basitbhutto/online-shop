<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shopwala</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
</head>
<body data-user-authenticated="@(User.Identity?.IsAuthenticated == true ? "true" : "false")">
    <partial name="_Navbar" />
    <main role="main">
        @RenderBody()
    </main>
    <partial name="_Footer" />
    <partial name="_CartDrawer" />
    <partial name="_ToastContainer" />
    @if (User.Identity?.IsAuthenticated != true)
    {
        <div class="modal fade modal-glass" id="guestChatModal" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0 position-relative">
                        <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
                    </div>
                    <div class="modal-body text-center py-4">
                        <i class="bi bi-chat-dots display-4 text-muted"></i>
                        <h5 class="mt-3">Chat about Products</h5>
                        <p class="text-muted small">Please log in to chat with us about products.</p>
                        <a asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path" class="btn btn-shopwala">Log In</a>
                    </div>
                </div>
            </div>
        </div>
        <partial name="_LoginModal" model="new Presentation.ViewModels.Account.LoginViewModel()" />
        <partial name="_RegisterModal" model="new Presentation.ViewModels.Account.RegisterViewModel()" />
    }
    <div class="modal fade modal-glass" id="productDetailModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header border-0 position-relative">
                    <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
                </div>
                <div class="modal-body pt-0" id="productDetailModalBody">
                    <div class="text-center py-5 text-muted"><span class="spinner-border spinner-border-sm me-2"></span>Loading...</div>
                </div>
            </div>
        </div>
    </div>
    @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("SuperAdmin") || User.IsInRole("AdminStaff")))
{
    <a asp-area="Admin" asp-controller="ProductChat" asp-action="Index" class="floating-chat-btn" id="floatingChatBtn" title="Chat" aria-label="Chat"><i class="bi bi-chat-dots-fill"></i></a>
}
else if (User.Identity?.IsAuthenticated != true)
{
    <a href="#" class="floating-chat-btn" id="floatingChatBtn" title="Chat" aria-label="Chat" data-bs-toggle="modal" data-bs-target="#guestChatModal"><i class="bi bi-chat-dots-fill"></i></a>
}
else
{
    <div class="modal fade modal-glass" id="buyerChatInfoModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0 position-relative">
                    <button type="button" class="btn-close-custom" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
                </div>
                <div class="modal-body text-center py-4">
                    <i class="bi bi-chat-dots display-4 text-primary"></i>
                    <h5 class="mt-3">Chat with Sellers</h5>
                    <p class="text-muted small mb-0">Open any product page and click <strong>Chat about this product</strong> to message the seller.</p>
                    <a asp-controller="Shop" asp-action="Index" class="btn btn-shopwala mt-3">Browse Products</a>
                </div>
            </div>
        </div>
    </div>
    <a href="#" class="floating-chat-btn" id="floatingChatBtn" title="Chat" aria-label="Chat" data-bs-toggle="modal" data-bs-target="#buyerChatInfoModal"><i class="bi bi-chat-dots-fill"></i></a>
}
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
