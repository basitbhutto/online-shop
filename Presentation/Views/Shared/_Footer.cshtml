<footer class="shopwala-footer" id="contact">
    <div class="container">
        <div class="footer-grid">
            <div id="footerBrand" class="footer-brand-wrap">
                <img src="@Url.Content("~/images/logo.png")" alt="Shopwala" class="footer-logo" data-fallback="@Url.Content("~/images/logo.png")" onerror="var t=this,f=t.getAttribute('data-fallback');if(f){t.onerror=null;t.src=f;t.onerror=function(){t.style.display='none';var b=document.getElementById('footerBrand');if(b)b.classList.add('logo-fallback');}else{t.style.display='none';var b=document.getElementById('footerBrand');if(b)b.classList.add('logo-fallback');}}" />
                @* <span class="footer-brand-text">Shopwala</span> *@
                <p class="footer-tagline mb-0">Curated fashion and premium accessories for the modern individual.</p>
            </div>
            <div>
                <h6>Quick Links</h6>
                <ul>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Shop" asp-action="Index">Shop</a></li>
                    <li><a asp-controller="Cart" asp-action="Index">Cart</a></li>
                </ul>
            </div>
            <div>
                <h6>Customer Service</h6>
                <ul>
                    <li><a href="#contact">Contact Us</a></li>
                    <li><a href="#">FAQ</a></li>
                </ul>
            </div>
            <div>
                <h6>Connect</h6>
                <div class="footer-social">
                    <a href="#" aria-label="Facebook"><i class="bi bi-facebook"></i></a>
                    <a href="#" aria-label="Instagram"><i class="bi bi-instagram"></i></a>
                    <a href="#" aria-label="Twitter"><i class="bi bi-twitter-x"></i></a>
                    <a href="mailto:support@shopwala.com" aria-label="Email"><i class="bi bi-envelope"></i></a>
                </div>
                <p class="small text-muted mt-2 mb-0">support@shopwala.com</p>
            </div>
        </div>
        <div class="footer-copyright">&copy; @DateTime.UtcNow.Year Shopwala. All rights reserved.</div>
    </div>
</footer>
