@{
    var controller = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var action = ViewContext.RouteData.Values["action"]?.ToString() ?? "";
    var isHome = controller.Equals("Home", StringComparison.OrdinalIgnoreCase) && action.Equals("Index", StringComparison.OrdinalIgnoreCase);
    var isShop = controller.Equals("Shop", StringComparison.OrdinalIgnoreCase);
}
<nav class="navbar navbar-expand-lg sticky-top shopwala-navbar">
    <div class="container">
        <a class="navbar-brand" id="navbarBrand" asp-controller="Home" asp-action="Index">
            <img src="@Url.Content("~/images/logo.png")" alt="Shopwala" class="navbar-logo" data-fallback="@Url.Content("~/images/logo.png")" onerror="var t=this,f=t.getAttribute('data-fallback');if(f){t.onerror=null;t.src=f;t.onerror=function(){t.style.display='none';var b=document.getElementById('navbarBrand');if(b)b.classList.add('logo-fallback');}else{t.style.display='none';var b=document.getElementById('navbarBrand');if(b)b.classList.add('logo-fallback');}}" />
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav navbar-center-nav mx-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link @(isHome ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(isShop ? "active" : "")" asp-controller="Shop" asp-action="Index">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Home")#contact">Contact Us</a>
                </li>
            </ul>
            <div class="d-flex align-items-center flex-wrap gap-2 gap-lg-1 ms-lg-auto">
                <div class="nav-search-wrap position-relative order-2 order-lg-0">
                    <form asp-controller="Shop" asp-action="Index" method="get" class="d-flex nav-search" id="navSearchForm">
                        <i class="bi bi-search align-self-center me-2 text-muted"></i>
                        <input type="text" name="search" id="navSearchInput" class="form-control border-0 bg-transparent p-0" placeholder="Search products..." value="@Context.Request.Query["search"]" autocomplete="off" />
                    </form>
                    <div class="search-suggestions shadow-sm rounded" id="searchSuggestions" style="display: none;"></div>
                </div>
                <ul class="navbar-nav flex-row align-items-center gap-1">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("AdminStaff"))
                        {
                            <li class="nav-item">
                                <a class="btn btn-shopwala btn-sm" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Admin</a>
                            </li>
                        }
                        @if (User.IsInRole("Buyer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link py-2" asp-area="Buyer" asp-controller="Dashboard" asp-action="Index"><i class="bi bi-person-circle me-1"></i>Account</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link p-2" asp-controller="Shop" asp-action="Index" title="Chat"><i class="bi bi-chat-dots fs-5"></i></a>
                            </li>
                        }
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline mb-0">
                                <button type="submit" class="btn btn-outline-secondary btn-sm"><i class="bi bi-box-arrow-right me-1"></i>Logout</button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative p-2" asp-controller="Wishlist" asp-action="Index" title="Wishlist">
                                <i class="bi bi-heart fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="wishlistCountBadge">0</span>
                            </a>
                        </li>
                        @if (User.IsInRole("SuperAdmin") || User.IsInRole("AdminStaff"))
                        {
                            <li class="nav-item">
                                <a class="nav-link position-relative p-2" asp-area="Admin" asp-controller="ProductChat" asp-action="Index" title="Chat">
                                    <i class="bi bi-chat-dots fs-5"></i>
                                    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="chatUnreadBadge" style="display:none">0</span>
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link position-relative p-2" href="#" data-bs-toggle="offcanvas" data-bs-target="#cartDrawer" title="Cart">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="cartCountBadge">0</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link position-relative p-2" asp-controller="Wishlist" asp-action="Index" title="Wishlist">
                                <i class="bi bi-heart fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="wishlistCountBadge">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link p-2" href="#" data-bs-toggle="modal" data-bs-target="#guestChatModal" title="Chat"><i class="bi bi-chat-dots fs-5"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link position-relative p-2" href="#" data-bs-toggle="offcanvas" data-bs-target="#cartDrawer" title="Cart">
                                <i class="bi bi-cart3 fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger d-none" id="cartCountBadge">0</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-shopwala btn-sm" href="#" data-bs-toggle="modal" data-bs-target="#loginModal"><i class="bi bi-person me-1"></i>Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</nav>
