@model List<Presentation.ViewModels.Shop.ProductCardViewModel>
@{
    ViewData["Title"] = "Wishlist";
}
<div class="container py-4">
    <h1 class="mb-4"><i class="bi bi-heart me-2"></i>My Wishlist</h1>
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var p in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-xl-3 wishlist-card" data-product-id="@p.Id">
                    <div class="card product-card h-100 border-0">
                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@p.Id" class="position-relative d-block">
                            <span class="badge badge-verified position-absolute top-0 start-0 m-2"><i class="bi bi-patch-check me-1"></i>Verified</span>
                            <button type="button" class="btn btn-sm btn-danger position-absolute top-0 end-0 m-2 wishlist-btn-remove" data-product-id="@p.Id" title="Remove from wishlist">
                                <i class="bi bi-heart-fill"></i>
                            </button>
                            <img src="@(p.MainImageUrl ?? "/images/placeholder.svg")" class="card-img-top product-card-img" alt="@p.Name" onerror="this.src='/images/placeholder.svg'"/>
                        </a>
                        <div class="card-body product-card-body">
                            <h6 class="card-title">@p.Name</h6>
                            <p class="mb-2">
                                <span class="product-price">Rs @p.DisplayPrice.ToString("N0")</span>
                                @if (p.SalePrice > p.DisplayPrice)
                                {
                                    <span class="product-price-old ms-1">Rs @p.SalePrice.ToString("N0")</span>
                                }
                            </p>
                            <div class="d-flex gap-1">
                                <a asp-controller="Shop" asp-action="Details" asp-route-id="@p.Id" class="btn btn-shopwala btn-sm flex-grow-1">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-heart display-4 text-muted"></i>
            <p class="mt-3 text-muted">Your wishlist is empty.</p>
            <a asp-controller="Shop" asp-action="Index" class="btn btn-shopwala">Browse Products</a>
        </div>
    }
</div>

@section Scripts {
<script>
$(function() {
    $('.wishlist-btn-remove').on('click', function(e) {
        e.preventDefault();
        var btn = $(this);
        var productId = btn.data('product-id');
        var card = btn.closest('.wishlist-card');
        fetch('/api/wishlist/' + productId, { method: 'DELETE', credentials: 'include' })
            .then(function(r) {
                if (r.status === 401) { window.location.href = '/Account/Login?returnUrl=' + encodeURIComponent(window.location.pathname); return null; }
                return r.json();
            })
            .then(function(d) {
                if (d) { $(card).fadeOut(300, function() { $(this).remove(); }); if (typeof updateWishlistCount === 'function') updateWishlistCount(); }
            });
    });
});
</script>
}
