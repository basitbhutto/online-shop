@model Presentation.ViewModels.Home.HomeIndexViewModel
@{
    ViewData["Title"] = "Home";
    var categories = Model?.Categories ?? new List<Presentation.ViewModels.Home.CategoryItem>();
    var products = Model?.Products ?? new List<Presentation.ViewModels.Home.ProductCardItem>();
    var totalCount = products.Count;
}

@* Hero Section *@
<section class="hero-section" style="background-image: url('@Url.Content("~/images/header.png")');">
    <div class="hero-overlay"></div>
    <div class="hero-inner">
        <h1 class="hero-title">New Collection</h1>
        <p class="hero-subtitle">Discover the latest trends in modern minimalist fashion.</p>
        <a asp-controller="Shop" asp-action="Index" class="btn-hero">Shop Now</a>
    </div>
</section>

@* Featured Items Section *@
<section class="featured-section">
    <div class="container">
        <h2 class="section-title">Featured Items</h2>
        <span class="section-title-accent"></span>
        <p class="section-subtitle">Browse our exclusive selection of premium clothing and accessories.</p>

        <div class="filter-pills">
            <a asp-controller="Shop" asp-action="Index" class="filter-pill active">All</a>
            @foreach (var c in categories.Take(4))
            {
                <a asp-controller="Shop" asp-action="Index" asp-route-categoryId="@c.Id" class="filter-pill">@c.Name</a>
            }
        </div>

        <div class="featured-grid">
            @foreach (var p in products)
            {
                <div class="card product-card h-100 border-0">
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="@p.Id" class="position-relative d-block text-decoration-none product-card-link">
                        <span class="badge badge-verified position-absolute top-0 start-0 m-2"><i class="bi bi-patch-check me-1"></i>Verified Supplier</span>
                        <img src="@(p.MainImageUrl ?? "/images/placeholder.svg")" class="card-img-top product-card-img" alt="@p.Name" onerror="this.src='/images/placeholder.svg'"/>
                        <button type="button" class="btn btn-sm wishlist-btn position-absolute top-0 end-0 m-2 @(User.Identity?.IsAuthenticated == true && p.IsInWishlist ? "btn-danger" : "btn-outline-danger")" data-product-id="@p.Id" data-in-wishlist="@((User.Identity?.IsAuthenticated == true && p.IsInWishlist).ToString().ToLower())" title="Wishlist">
                            <i class="bi @(User.Identity?.IsAuthenticated == true && p.IsInWishlist ? "bi-heart-fill" : "bi-heart")"></i>
                        </button>
                    </a>
                    <div class="card-body product-card-body">
                        <h6 class="card-title">@p.Name</h6>
                        <p class="small text-muted mb-2"><i class="bi bi-geo-alt me-1"></i>@(p.LocationName ?? "â€”")</p>
                        <p class="mb-2">
                            @if (p.SalePrice > p.DisplayPrice)
                            {
                                <span class="product-price-old me-1">Rs @p.SalePrice.ToString("N0")</span>
                                <span class="product-price">Rs @p.DisplayPrice.ToString("N0")</span>
                            }
                            else
                            {
                                <span class="product-price">Rs @p.DisplayPrice.ToString("N0")</span>
                            }
                            <span class="small text-muted">/ unit</span>
                        </p>
                        <button type="button" class="btn btn-shopwala btn-sm w-100 js-buy-now-sidebar" data-product-id="@p.Id" data-product-name="@p.Name" data-product-price="@p.DisplayPrice" data-product-image="@(p.MainImageUrl ?? "/images/placeholder.svg")">Buy Now</button>
                    </div>
                </div>
            }
        </div>

        @if (!products.Any())
        {
            <div class="text-center py-5 text-muted">
                <p>No products yet. Add categories and products from Admin.</p>
                <a asp-controller="Shop" asp-action="Index" class="btn btn-shopwala">Browse Shop</a>
            </div>
        }
        else
        {
            <div class="text-center mt-5">
                <a asp-controller="Shop" asp-action="Index" class="btn-view-all">View All Products</a>
            </div>
        }
    </div>
</section>

<div style="display:none"><form>@Html.AntiForgeryToken()</form></div>

@section Scripts {
<script>
$(function() {
    var g = typeof getGuestWishlist === 'function' ? getGuestWishlist() : [];
    $('.wishlist-btn').each(function() {
        var pid = parseInt(this.getAttribute('data-product-id'), 10);
        if (!isNaN(pid) && g.indexOf(pid) >= 0) {
            this.setAttribute('data-in-wishlist', 'true');
            this.classList.remove('btn-outline-danger'); this.classList.add('btn-danger');
            var icon = this.querySelector('i'); if (icon) { icon.classList.remove('bi-heart'); icon.classList.add('bi-heart-fill'); }
        }
    });
    if (typeof updateWishlistCount === 'function') updateWishlistCount();
});
</script>
}
